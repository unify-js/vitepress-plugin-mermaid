{
  "name": "@unify-js/vitepress-plugin-mermaid",
  "version": "0.1.0",
  "description": "VitePress plugin for Mermaid diagram preview with fullscreen, zoom, and pan support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "import": "./dist/theme.js"
    },
    "./mermaid-markdown": {
      "types": "./dist/mermaid-markdown.d.ts",
      "import": "./dist/mermaid-markdown.js"
    },
    "./components/Mermaid.vue": {
      "import": "./dist/components/Mermaid.vue"
    },
    "./components/MermaidPreview.vue": {
      "import": "./dist/components/MermaidPreview.vue"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && node scripts/copy-components.js",
    "dev": "tsc --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "vitepress",
    "mermaid",
    "diagram",
    "preview",
    "plugin"
  ],
  "author": "Luo Huidong",
  "license": "MIT",
  "peerDependencies": {
    "mermaid": "^11.0.0",
    "vitepress": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.13",
    "mermaid": "^11.0.0",
    "prettier": "^3.5.0",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vitepress": "2.0.0-alpha.16",
    "vue": "^3.5.28"
  }
}
